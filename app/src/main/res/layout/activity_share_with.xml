<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.applepie.receiptcapture.ReceiptCapture">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:weightSum="3">

        <TextView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:drawableLeft="@drawable/left"
            android:padding="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_circle_ofline"
            android:text="Photos"
            android:textAllCaps="false" />

    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Share with:"
        android:textColor="#222"
        android:textSize="25dp"
        android:paddingLeft="10dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="#222"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/facebook" />

            <TextView
                android:layout_width="5dp"
                android:layout_height="10dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/button_circle_ofline"
                android:text="Facebook"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/twitter" />

            <TextView
                android:layout_width="5dp"
                android:layout_height="10dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/button_circle_ofline"
                android:text="Tweeter"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/snapchat" />

            <TextView
                android:layout_width="5dp"
                android:layout_height="10dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/button_circle_ofline"
                android:text="Snapchat"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lan" />

            <TextView
                android:layout_width="5dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/button_circle_ofline"
                android:text="Lan Wifi"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bluetooth" />

            <TextView
                android:layout_width="5dp"
                android:layout_height="10dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/button_circle_ofline"
                android:text="Bluetooth"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:drawableLeft="@drawable/left"
            android:padding="10dp" />

        <TextView
